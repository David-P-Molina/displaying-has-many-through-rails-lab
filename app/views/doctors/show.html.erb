<h1> <%= @doctor.name %> </h1>
<h2><%= @doctor.department %></h2>
<ul>
    <% @doctor.appointments.each do |appointment|%>
        <% @patient_info = @doctor.patients.find(appointment.patient_id) %>
        <li><%= link_to @patient_info.name, patient_path(@patient_info) %> - <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appointment) %> </li>
    <% end %>
</ul>

